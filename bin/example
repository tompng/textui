#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'textui'

require 'textui/text'
class Foo < Textui::Component
  def initialize
    super
    @tick = 0
    @base = 120
    @paused = false
    self.clickable = true
  end

  def mouse_down(e)
    case e.data
    when :color
      @base = (@base + 6) % 252
    when :toggle
      @paused = !@paused
    end
  end

  def tick
    @tick += 1 unless @paused
  end

  def render
    draw(0, 0, 5.times.map { "\e[48;5;#{@base+(@tick-_1)%5}m " }.join, click: :toggle)
    draw(8, 0, "\e[48;5;#{@base}mchange color", click: :color)
  end
end

begin
  message = Textui::Text.new("\e[1mTAB\e[m: switch focus\n\e[1mCTRL-C\e[m: exit")
  Textui.add_child(message, 0, 0)
  4.times do |i|
    textarea = Textui::Textarea.new(11, 5, text: "text#{i}", title: i.to_s, title_align: :left)
    textarea.clickable = true
    Textui.add_child(textarea, i * 2, 3 + i % 2 * 2 + i / 2)
  end
  textarea1 = Textui::Textarea.new(20, 8, text: "Hello,\nWorld! 1", title: 'Textarea1', title_align: :left)
  textarea2 = Textui::Textarea.new(20, 10, text: "Hello,\nWorld! 2", title: 'Textarea2', title_align: :left)
  Textui.add_child(textarea1, 0, 8)
  Textui.add_child(textarea2, 16, 3)
  Textui.add_child(Foo.new, 0, 2)
  textarea1.clickable = true
  textarea2.clickable = true
  textarea1.focus

  Textui.event_loop fullscreen: false do |type, data|
    if type == :key && data.type == :ctrl_x
      textarea1.parent ? textarea1.remove : Textui.add_child(textarea1, 0, 5)
    end
    if type == :resize
      h, w = STDIN.winsize
      textarea1.width = [w / 3, 10].max
      textarea2.height = [h / 3, 4].max
    end
  end
rescue Interrupt
  puts "\e[1mTEXTAREA1\e[0m"
  puts textarea1.value
  puts "\e[1mTEXTAREA2\e[0m"
  puts textarea2.value
end
